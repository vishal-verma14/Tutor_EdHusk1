<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:elevation="50dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_weight="1"
        android:background="#1c6471"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/name_app"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/address_app"
            android:drawableLeft="@drawable/name_img"
            android:drawablePadding="40dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/bgContent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_app"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/address_img"
            android:drawablePadding="40dp"
            android:ellipsize="marquee"
            android:text="address"
            android:textColor="@color/bgContent"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView7"
            android:background="#fff" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#fff" />

        <TextView
            android:id="@+id/standard_name_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"

            android:text="standard"
            android:textColor="@color/bgContent" />

        <ImageView
            android:id="@+id/class_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView6"
            android:background="@drawable/standerd_img"
            android:text="@string/Class_name"
            android:textColor="@color/bgContent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="125dp"
            android:background="#fff" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView4"
            android:background="#fff" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="1dp"
            android:layout_height="49dp"
            android:layout_above="@+id/imageView12"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@+id/price_range_app"
            android:background="#fff" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginEnd="41dp"
            android:layout_toStartOf="@+id/price_range"
            android:background="#fff" />

        <TextView
            android:id="@+id/price_range_app"
            android:layout_width="50dp"
            android:layout_height="20dp"

            android:layout_marginEnd="16dp"
            android:text="$25"
            android:textColor="@color/bgContent"
            android:layout_above="@+id/imageView12"
            android:layout_alignEnd="@+id/address_app" />

        <ImageView
            android:id="@+id/imageView10"
            style="@style/TitleBadgeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_img"
            android:text="@string/Board"
            android:layout_below="@+id/imageView4"
            android:layout_alignStart="@+id/price_range_app" />

        <TextView
            android:id="@+id/subject_name_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginStart="150dp"
            android:text="subject"
            android:textColor="@color/bgContent" />

        <ImageView
            android:id="@+id/textView"
            style="@style/TitleBadgeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:background="@drawable/subject_img" />

    </RelativeLayout>
</android.support.v7.widget.CardView>