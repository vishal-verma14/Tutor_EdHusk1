<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:elevation="50dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_weight="1"
        android:background="#d88fd3f2"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="15dp"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/address"
            android:drawableLeft="@drawable/name_img"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="name"
            android:textAlignment="center"
            android:textColor="@color/bgContent"
            android:textSize="16sp"/>
<ImageView
    android:layout_width="100dp"
    android:layout_height="1dp"
    android:background="#fff"
    android:layout_alignTop="@+id/address"
    android:layout_toStartOf="@+id/imageView6"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/title_from_to_dots"
            android:drawableLeft="@drawable/address_img"
            android:ellipsize="marquee"
            android:textColor="@color/bgContent"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_alignStart="@+id/address"
            android:layout_centerVertical="true"
            android:background="#fff"/>

        <TextView
            android:id="@+id/app_bar_applied_text"
            style="@style/TitleBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/class_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/app_bar_verified_text"
            android:layout_marginEnd="30dp"
            android:layout_toStartOf="@+id/app_bar_verified_text"
            android:background="@drawable/standerd_img"
            android:text="@string/Class_name"
            android:textColor="@color/bgContent"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/class_logo"
            android:layout_toEndOf="@+id/app_bar_verified_text"
            android:background="#fff"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginEnd="24dp"
            android:background="#fff"
            android:layout_alignTop="@+id/class_logo"
            android:layout_toStartOf="@+id/class_logo"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/textView"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/textView"
            android:background="#fff"/>

        <TextView
            android:id="@+id/board_name"
            style="@style/TitleBadgeText"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="$25"
            android:textColor="#cccccc"/>

        <ImageView
            style="@style/TitleBadgeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/board_name"
            android:layout_alignTop="@+id/textView"
            android:background="@drawable/price_img"
            android:text="@string/Board"/>

        <TextView
            android:id="@+id/app_bar_verified_text"
            style="@style/TitleBadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/textView"
            style="@style/TitleBadgeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/app_bar_verified_text"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/app_bar_verified_text"
            android:background="@drawable/subject_img"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>