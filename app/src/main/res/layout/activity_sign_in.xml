<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slide_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoParalaxOffset="0dp"
        sothree:umanoShadowHeight="4dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_img"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_gravity="bottom"
        android:src="@mipmap/edhusk_logo"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="20dp"/>

        <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
            xmlns:app="http://schemas.android.com/apk/lib/com.app.Tutor_EdHusk"
            android:id="@+id/circle_loading_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            app:animCircleLoadingView_mainColor="#f50000"
            app:animCircleLoadingView_secondaryColor="#b37878"
            app:animCircleLoadingView_textColor="@android:color/white"
            />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EdHusk"
        android:textSize="45dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:text="Sign In "
    android:textSize="20dp"
    android:textColor="#fff"
    android:layout_margin="10dp"/>

    <Button
        android:id="@+id/google_sign_in"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/google_icon"
        android:layout_gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></Button>
        </LinearLayout>
    </RelativeLayout>



    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
