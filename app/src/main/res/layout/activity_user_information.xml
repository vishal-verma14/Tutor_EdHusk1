<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77c9af"

    tools:context="com.example.vishal.tutor_edhusk.User_information">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum=".5"
        android:id="@+id/rlp2"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/splash_img"
            android:id="@+id/dash_img"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vishal Verma"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:id="@+id/pd_name"
        android:layout_below="@id/rlp2"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/rlp1"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:weightSum=".5"
        android:id="@+id/rlp1"
        android:layout_below="@+id/rlp2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="#fff"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="135dp"
                    android:orientation="vertical"
                    android:background="#77c9af"
                    android:id="@+id/ui_profile_ly"
                    >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profile"
/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_margin="10dp"
                        android:textSize="15dp"
                        android:id="@+id/ui_qualification"
                        android:textColor="#fff"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#77c9af"
                    android:orientation="vertical"
                    android:id="@+id/ui_expertise_ly">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/expert_img"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Expertise
"                        android:id="@+id/ui_expertise"

                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="#77c9af"

                    android:orientation="vertical"
                    android:id="@+id/ui_bank_information_ly">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bank_detail_img"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Bank Informarion"
                        android:id="@+id/ui_bank_information"

                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:background="#77c9af"
                    android:id="@+id/ui_Quilification_ly"
                    android:layout_gravity="bottom"
                    >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/quilification_img"
                        android:layout_gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Qualification"
                        android:id="@+id/ui_profile"

                        android:layout_margin="10dp"
                        android:textSize="15dp"
                        android:textColor="#fff"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
